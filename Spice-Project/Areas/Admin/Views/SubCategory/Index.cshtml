@model IEnumerable<SubCategory>

<div class="border backgroundGray">
    <div class="row">
        <div class="col-6">
            <h1 class="text-info">SubCategoryList</h1>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
        <br/>
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(X => X.Name)</th>
                        <th>@Html.DisplayNameFor(X => X.Category.Name)</th>
                        <th></th>
                        <th></th>
                    </tr>
                    
                        @foreach (var item in Model)
                        {
                            <tr>
                           <td>@Html.DisplayFor(m => item.Name)</td>
                           <td>@Html.DisplayFor(m => item.Category.Name)</td>
                            <td>
                           <partial name="_TableButtonPartial" model="item.Id">
                           </td>
                          </tr>
                    }

                </table>
            }
            else
            {
                <p>No SubCategory Exists..</p>
            }
        </div>
   
</div>